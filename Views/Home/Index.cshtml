@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white text-center py-5 rounded">
                <h1 class="display-4 mb-3">Welcome to TechStore</h1>
                <p class="lead mb-4">Discover the latest technology products at unbeatable prices</p>
                <a class="btn btn-light btn-lg" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-shop"></i> Shop Now
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Why Choose TechStore?</h2>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-truck text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Fast Shipping</h5>
                    <p class="card-text">Free shipping on orders over $50. Get your products delivered quickly.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Quality Guarantee</h5>
                    <p class="card-text">All products come with a 30-day money-back guarantee.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-3">
            <div class="card border-0 h-100">
                <div class="card-body">
                    <i class="bi bi-headset text-info" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">24/7 Support</h5>
                    <p class="card-text">Our customer support team is available around the clock.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-12 text-center">
            <div class="bg-light p-4 rounded">
                <h3>Ready to start shopping?</h3>
                <p class="mb-3">Browse our extensive catalog of technology products</p>
                <a class="btn btn-primary btn-lg me-2" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-collection"></i> View All Products
                </a>
                <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-info-circle"></i> Learn More
                </a>
            </div>
        </div>
    </div>
</div>
